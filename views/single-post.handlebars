<div class="">
    <div
        class="p-6 m-auto max-w-sm bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700">
        <a href="/post/{{id}}">
            <h5 class="mb-2 text-2xl font-semibold tracking-tight text-gray-900 dark:text-white">{{post.title}}</h5>
        </a>
        <p class="mb-3 font-normal text-gray-500 dark:text-gray-400">{{post.text}}</p>
        <hr>
        <h3 class="text-grey leading-none my-2"> Comments </h3>
        <hr>

        {{#each post.comments as |comment|}}
        {{> comments comment}}
        {{/each}}
        <hr>
        <form id="comment-form" data-id="{{post.id}}" class="bg-white mt-5 shadow-md rounded px-8 pt-6 pb-8 mb-4 ">
            <div class="mb-6">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="text">
                    Comment
                </label>
                <textarea
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                    id="comment-text"></textarea>
            </div>
            <div class="flex items-center justify-between">
                <button
                    class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Create comment
                </button>
            </div>
        </form>
    </div>
</div>

<script src="/js/comment.js"></script>