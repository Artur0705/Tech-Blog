<div class="p-6 bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700">
    <a href="/dashboard/show/{{id}}">
        <h5 class="mb-2 text-2xl font-semibold tracking-tight text-gray-900 dark:text-white">{{title}}</h5>
    </a>
    <p class="mb-3 font-normal text-gray-500 dark:text-gray-400">{{text}}</p>
    <div class="flex items-center">
        <div class="text-sm flex items-center">
            <p class="text-black leading-none">{{user.name}}</p>
            <p class="ml-5 text-gray-600">{{format_date created_at}}</p>
        </div>
    </div>
    <hr>
    <h3 class="text-black leading-none my-2"> Comments </h3>
    <hr>

    {{#each comments as |comment|}}
    {{> comments comment}}
    {{/each}}
</div>